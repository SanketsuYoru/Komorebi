distributed under the License is distributed on an "AS IS" BASIS,

WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied.

See the License for the specific language governing permissions and

limitations under the License.</TextBlock>

                        <TextBlock x:ConnectionId='11' Name="Title2" Text=" 联系作者" x:Uid="FileAdd_Page_Contact" Margin="0,10,0,0" FontSize="24" RelativePanel.Below="content2"/>
                        <TextBlock x:ConnectionId='12' Name="Email" Text=" 邮件:KomorenobiProject_2019@outlook.com"  x:Uid="FileAdd_Page_Email" RelativePanel.Below="Title2" FontSize="22" Margin="20,20,0,0" ></TextBlock>
                        <Button x:ConnectionId='13' x:Name="Email_B" RelativePanel.RightOf="Email"  RelativePanel.Below="Title2" Margin="0,20,0,0" Width="40" Height="30" FontFamily="segoe MDL2 Assets" Content="&#xED5C;" FontSize="18"                      ></Button>
                    </RelativePanel>
                    
                </ScrollViewer>

            </PivotItem>


        </Pivot>





    </Grid>

</Page>

