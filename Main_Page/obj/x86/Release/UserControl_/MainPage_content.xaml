<Page x:ConnectionId='1'
    x:Class="Main_Page.UserControl_.MainPage_content"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Main_Page.UserControl_"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Main_Page.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <GridView x:ConnectionId='2' Name="Source_"                               >
            <GridView.ItemTemplate>
                <DataTemplate                        >
                    <StackPanel x:ConnectionId='3'>
                        <Image x:ConnectionId='4' Name="CoverIMG" Width="512" Height="288"                               ></Image>
                        <TextBlock x:ConnectionId='5' FontSize="16" Name="Name_"                     ></TextBlock>
                        <TextBlock x:ConnectionId='6' FontSize="10" Name="Date_"                     ></TextBlock>
                        <TextBlock x:ConnectionId='7' FontSize="10" Name="Size_"                     ></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>


    </Grid>
</Page>

